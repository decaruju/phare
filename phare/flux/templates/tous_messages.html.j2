{# Page affichant l'ensemble des messages aux utilisateurs #}

{% extends 'flux.html.j2' %}

{% load i18n %}
{% load staticfiles %}

{% block title %}
	{# trans "Messages des autorités" #}
{% endblock %}


{% block content %}
	{% for message in messages %}
		<div class=row">
			<div class="col-8 message">
				<div class="message_titre
					{% if message.type_message == "u" %}
						bg-danger
					{% elif message.type_message == "n" %}	
						bg-primary
					{% else %}
						bg-info
					{% endif %}
				">
					<div class="message_icone">
						<img src="
							{% if message.auteur == "pompier" %} 
								{% static 'flux/images/pompiers.png' %}
							{% endif %}"						
						class="img-fluid float-left"/>	
					</div>				
					<h3>
					{% if langue == "en-US" %}
						{{ message.titre_en }}
					{% else %}
						{{ message.titre_fr }}
					{% endif %}
					</h3>
				</div>			
					
				<div class="message_contenu">
					<p class="text-dark">
						{% trans 'Publié le :' %}{{ message.horodatage|date:'d-m-Y'}}
					</p>
					<p>
						{% if langue == "en-US" %}
							{{ message.message_en }}
						{% else %}
							{{ message.message_fr }}
						{% endif %}
					</p>
				</div>			
			</div>
		</div>
	{% endfor %}
{% endblock %}

